<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.survey.ui.fragment.start.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_surveyFragment"
            app:destination="@id/surveyFragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/surveyFragment"
        android:name="com.example.survey.ui.fragment.survey.SurveyFragment"
        android:label="SurveyFragment"
        tools:layout="@layout/fragment_survey" />
</navigation>